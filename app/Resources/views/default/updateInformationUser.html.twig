{% extends 'base.html.twig' %}

{% block body %}
    {{parent()}}
    
    
    
    <div class="col-7 card mt-5" id="cardUser">
        <div class="card-header mt-3">
            {% if app.user != null %}
                <div class="text-center mt-5">
                    <h1 class="updateTitle">Buenas {{app.user.username}}</h1>
                </div>
            {% else %}
                <div class="text-center mt-5">
                    <h1 class="updateTitle">Buenas usuario</h1>
                </div>
            {% endif %}
        </div>
        <div class="card-body">
            <form method="POST" action="{{path('updateInfo')}}">
                <div class="form-group mt-3">
                    <label class="form-label">Username</label>
                    <input type="text" class="form-control" placeholder="Username" value="{{app.user.username}}" name="username" id="usernameInput"/>
                </div>
                <div class="form-group mt-3">
                    <label class="form-label">Password</label>
                    <input type="password" class="form-control" placeholder="Password" value="" name="password"/>
                </div>
                <div class="form-group mt-3">
                    <label class="form-label">Email</label>
                    <input type="email" class="form-control" placeholder="Email" value="{{app.user.email}}" name="email"/>
                </div>
                <div class="mt-3 text-center">
                    <button type="submit" class="btn btn-secondary">Actualizar</button>
                </div>
            </form>
        </div>
    </div>
{% endblock %}


{% block stylesheets %}

    {{parent()}}
    <style>
        #cardUser{
            background: #adb5bd !important;
            margin: 0 auto;
        }
    </style>
{% endblock %}

{% block javascripts %}
    {{parent()}}
    <script src="{{asset('js/update.js')}}"></script>
{% endblock %}
